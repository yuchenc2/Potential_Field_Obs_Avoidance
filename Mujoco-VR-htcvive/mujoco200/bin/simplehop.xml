<mujoco model="OneDHopper">
    <compiler angle="radian" inertiafromgeom="true" />
    <size njmax="500" nconmax="100" />

    <default>
	    <!-- <geom  rgba="0.45 0.6 0.6 1"/> -->
		<site type="sphere" size="0.01"/>
	</default>

    <worldbody>
        <light directional="true" cutoff="4" exponent="20" diffuse="1 1 1" specular="0 0 0" pos=".9 .3 2.5" dir="-.9 -.3 -2.5 "/>
        <geom name="ground" size="3 1 0.5" pos="0 0 -1" type="box" rgba="0 0.5 0 1" />
        <body name="leg" pos="0 0 2.0">
            <freejoint/>
            <site name="legBottom" pos="0 0 -0.5"/>
            <geom size=".12 .2 .04" pos="0 0 0.5" type="box" />
            <geom size=".12 .2 .04" pos="0 0 -0.5" type="box" />

            <body name="body" pos="0 0 0.0 ">
                <joint name="slide1" pos="0 0 1" axis="0 0 1" type="slide" stiffness="10000.0" springref="1.0"/>
                <geom size=".8 .2 .2" type="box" rgba="0.6 0.2 0.2 1" />
                <site name="bodyBottom" pos="0 0 -0.2"/>
            </body>
        </body>
        
    </worldbody>

    <tendon>
		<spatial name="lThread" width="0.01" rgba=".95 .3 .3 1" limited="true" range="0 0.55" >
            <site site="legBottom"/>
			<site site="bodyBottom"/>
		</spatial>
	</tendon>


	<actuator>
        <motor joint='slide1' name='Actuator1' gear="5000" /> 
	</actuator>

	<sensor>
		<jointpos name="Sensor1" joint="slide1" noise="0.001"/>
	</sensor>

</mujoco>
